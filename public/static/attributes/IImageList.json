{
    "classId": "idm.component.cms.iimagelist",
    "comName": "图片列表",
    "className": "IImageList",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "栏目id",
                    "desc": "指定显示哪个栏目下的内容",
                    "bindKey": "columnId"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "显示数量",
                    "desc": "最多显示几条",
                    "bindKey": "contentNumber",
                    "default": 5
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "是否补空",
                    "desc": "数量不足时是否填入空行",
                    "bindKey": "fillBlank",
                    "default": true,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "dictionary": [
                        {
                            "label": "当前页打开",
                            "value": "_target"
                        },
                        {
                            "label": "新页签打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_target"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "样式风格",
                    "bindKey": "styleType",
                    "dictionary": [
                        {
                            "label": "横向图文",
                            "value": "horizontal"
                        },
                        {
                            "label": "纵向图文",
                            "value": "vertical"
                        }
                    ],
                    "default": "vertical"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "左右间隔",
                    "bindKey": "horizontalGutter",
                    "default": 20
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "上下间隔",
                    "bindKey": "verticalGutter",
                    "default": 20
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "占位格数",
                    "bindKey": "itemSpan",
                    "default": 5
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                }
            ]
        },
        {
            "type": "group",
            "text": "单项样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "itemBox"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "描述行数",
                    "bindKey": "descClamp",
                    "default": 4
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "文字边距",
                    "bindKey": "fontBox",
                    "default": {
                        "marginTopVal": "10px",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "",
                        "paddingRightVal": "",
                        "paddingBottomVal": "",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "阴影样式",
                    "bindKey": "itemBoxShadow"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题文字",
                    "display": "@[styleType === 'horizontal']",
                    "bindKey": "titleFont",
                    "default": {
                        "fontColors": {
                            "hex": "#222222",
                            "hex8": "#222222FF"
                        },
                        "fontSize": 16,
                        "fontSizeUnit": "px",
                        "fontWeight": "400"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "描述文字",
                    "bindKey": "descFont"
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "图片样式",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "图片宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "imgWidth",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "图片高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "imgHeight",
                            "default": "auto"
                        },
                        {
                            "type": "border",
                            "layoutType": "block",
                            "text": "图片边框",
                            "bindKey": "imgBorder",
                            "default": {
                                "border": {
                                    "top": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "right": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "bottom": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "left": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    }
                                },
                                "radius": {
                                    "leftTop": {
                                        "radius": 6,
                                        "radiusUnit": "px"
                                    },
                                    "rightTop": {
                                        "radius": 6,
                                        "radiusUnit": "px"
                                    },
                                    "leftBottom": {
                                        "radius": 6,
                                        "radiusUnit": "px"
                                    },
                                    "rightBottom": {
                                        "radius": 6,
                                        "radiusUnit": "px"
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "接口地址",
                    "bindKey": "customInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "default": "/ctrl/website/api/columnlist"
                }
            ]
        }
    ]
}
