{
    "classId": "idm.component.cms.ibreadcrumb",
    "comName": "面包屑",
    "className": "IBreadcrumb",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "dictionary": [
                        {
                            "label": "当前页打开",
                            "value": "_self"
                        },
                        {
                            "label": "新页签打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "显示图标",
                    "bindKey": "isShowIcon",
                    "default": true,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "iconSelect",
                    "layoutType": "inline",
                    "text": "左侧图标",
                    "display": "@[isShowIcon]",
                    "bindKey": "icon"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "desc": "设置图标颜色，会覆盖主题色",
                    "text": "图标颜色",
                    "display": "@[isShowIcon]",
                    "bindKey": "iconColor"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "图标大小",
                    "bindKey": "iconSize",
                    "display": "@[isShowIcon]",
                    "default": 20
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "分隔符号",
                    "bindKey": "separator",
                    "default": ">"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "符号颜色",
                    "bindKey": "separatorColor"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "提示文字",
                    "bindKey": "tipText",
                    "default": "当前位置："
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "提示文字",
                    "bindKey": "tipFont"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "面包屑文字",
                    "bindKey": "breadcrumbFont",
                    "default": {
                        "fontColors": {
                            "hex": "#333333",
                            "hex8": "#333333FF"
                        }
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "面包屑末尾文字",
                    "bindKey": "breadcrumbLastFont"
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "选择栏目",
                    "bindKey": "selectColumn",
                    "dataSourceUrl": "/ctrl/website/api/channelTree",
                    "default": "",
                    "openGroup": true
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "自定义点击事件",
                    "bindKey": "customClickFunction",
                    "desc": "自定义点击事件，设置之后会覆盖内置事件"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "接口地址",
                    "bindKey": "customInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "default": "/ctrl/website/api/breadCrumbs"
                }
            ]
        }
    ]
}
