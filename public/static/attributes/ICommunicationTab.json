{
    "classId": "idm.component.cms.icommunicationtab",
    "comName": "互动交流tab",
    "className": "ICommunicationTab",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": []
        },
        {
            "type": "group",
            "text": "基础样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题文字",
                    "bindKey": "titleFont",
                    "default": {
                        "fontColors": {
                            "hex": "#333333",
                            "hex8": "#333333FF"
                        },
                        "fontSize": 15,
                        "fontSizeUnit": "px",
                        "fontWeight": "400"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "内容文字",
                    "bindKey": "contentFont",
                    "default": {
                        "fontColors": {
                            "hex": "#666666",
                            "hex8": "#666666FF"
                        },
                        "fontWeight": "400"
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "tab样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "tabBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "10px",
                        "marginBottomVal": "10px",
                        "marginLeftVal": "",
                        "paddingTopVal": "2px",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "2px",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "tabBorder",
                    "default": {
                        "border": {
                            "top": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "right": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "bottom": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "left": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            }
                        },
                        "radius": {
                            "leftTop": {
                                "radius": 2,
                                "radiusUnit": "px"
                            },
                            "rightTop": {
                                "radius": 2,
                                "radiusUnit": "px"
                            },
                            "leftBottom": {
                                "radius": 2,
                                "radiusUnit": "px"
                            },
                            "rightBottom": {
                                "radius": 2,
                                "radiusUnit": "px"
                            }
                        }
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "选中背景",
                    "bindKey": "tabActiveBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "未选中背景",
                    "bindKey": "tabBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "选中文字",
                    "bindKey": "tabActiveFont",
                    "default": {
                        "fontColors": {
                            "hex": "#FFFFFF",
                            "hex8": "#FFFFFFFF"
                        }
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "未选中文字",
                    "bindKey": "tabFont"
                }
            ]
        },
        {
            "type": "table",
            "text": "tab设置",
            "bindKey": "tabList",
            "tabText": "主题[index]",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "标识",
                    "bindKey": "tabKey"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "名称",
                    "bindKey": "tabName",
                    "display": "@[tabKey]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "默认选中",
                    "bindKey": "isActive",
                    "display": "@[tabKey]"
                }
            ],
            "default": [
                {
                    "tabKey": "tabOne",
                    "tabName": "热点问答",
                    "isActive": true
                },
                {
                    "tabKey": "tabTwo",
                    "tabName": "网上调查",
                    "isActive": false
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    },
                    "minorColor": {
                        "hex": "#90C5EE",
                        "hex8": "#90C5EEFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    },
                    "minorColor": {
                        "hex": "#f87373",
                        "hex8": "#f87373FF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    },
                    "minorColor": {
                        "hex": "#38e996",
                        "hex8": "#38e996FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色，作用于选中tab背景色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "次要颜色",
                    "bindKey": "minorColor",
                    "desc": "主题的次要颜色，作用于未选中tab背景色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "动态内容",
                    "bindKey": "dataSourceType",
                    "desc": "通过这些方式去动态获取结果值显示成文本内容",
                    "dictionary": [
                        {
                            "label": "自定义接口",
                            "value": "customInterface"
                        },
                        {
                            "label": "页面统一接口",
                            "value": "pageCommonInterface"
                        },
                        {
                            "label": "自定义函数",
                            "value": "customFunction"
                        }
                    ],
                    "default": "customInterface"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "接口地址",
                    "bindKey": "customInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "display": "@[dataSourceType=='customInterface']"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "结果集名",
                    "bindKey": "dataName",
                    "desc": "页面接口设定的结果集名称，位置为：页面设置》高级设置》页面接口",
                    "default": "",
                    "placeholder": "示例：resultData",
                    "display": "@[dataSourceType=='pageCommonInterface']"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName",
                    "display": "@[dataSourceType!='customFunction']"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "自定义函数",
                    "bindKey": "customFunction",
                    "desc": "获取动态文本内容、自定义接口回调、页面统一接口回调的时候会调用此方法，返回数据格式为字符串，接收参数：{...自定义,interfaceData:自定义接口或页面统一接口的返回结果,expressData:表达式替换后的结果}",
                    "multiple": false
                }
            ]
        }
    ]
}
