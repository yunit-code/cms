{
    "classId": "idm.component.cms.itextlist",
    "comName": "文字列表",
    "className": "ITextList",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "栏目id",
                    "desc": "指定显示哪个栏目下的内容",
                    "bindKey": "columnId"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "显示数量",
                    "desc": "最多显示几条",
                    "bindKey": "contentNumber",
                    "default": 5
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "是否补空",
                    "desc": "数量不足时是否填入空行",
                    "bindKey": "fillBlank",
                    "default": true,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "时间换行",
                    "desc": "设置时间和文本不在一行显示，换行显示",
                    "bindKey": "isTimeWrap",
                    "default": false,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "上方标题",
                    "desc": "设置文字列表上方标题显示状态",
                    "bindKey": "isShowUpTitle",
                    "default": false,
                    "dictionary": [
                        {
                            "label": "显示",
                            "value": true
                        },
                        {
                            "label": "隐藏",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "dictionary": [
                        {
                            "label": "当前页打开",
                            "value": "_target"
                        },
                        {
                            "label": "新页签打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_target"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "样式风格",
                    "bindKey": "styleType",
                    "dictionary": [
                        {
                            "label": "icon + 文本 + 时间",
                            "value": "iconAndTextAndTime"
                        },
                        {
                            "label": "icon + 文本",
                            "value": "iconAndText"
                        },
                        {
                            "label": "文本 + 时间",
                            "value": "textAndTime"
                        },
                        {
                            "label": "时间 + 文本",
                            "value": "timeAndText"
                        }
                    ],
                    "default": "iconAndTextAndTime"
                },
                {
                    "type": "iconSelect",
                    "layoutType": "inline",
                    "text": "左侧图标",
                    "bindKey": "titleIcon",
                    "display": "@[styleType === 'iconAndTextAndTime' || styleType === 'iconAndText']",
                    "default": ""
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "背景设置",
                    "desc": "点击？查看背景设置用法指南",
                    "helpUrl": "",
                    "children": [
                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "text": "背景色",
                            "bindKey": "bgColor",
                            "placeholder": "请选择颜色",
                            "default": {}
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "inline",
                            "text": "背景图片",
                            "bindKey": "bgImgUrl",
                            "placeholder": "可输入图片地址或直接上传"
                        },
                        {
                            "type": "inputNumberUnit",
                            "layoutType": "inline",
                            "text": "横向偏移",
                            "bindKey": "positionX",
                            "dictionary": [
                                {
                                    "label": "px",
                                    "value": "px"
                                },
                                {
                                    "label": "%",
                                    "value": "%"
                                },
                                {
                                    "label": "em",
                                    "value": "em"
                                }
                            ],
                            "display": "@[bgImgUrl]"
                        },
                        {
                            "type": "inputNumberUnit",
                            "layoutType": "inline",
                            "text": "纵向偏移",
                            "bindKey": "positionY",
                            "dictionary": [
                                {
                                    "label": "px",
                                    "value": "px"
                                },
                                {
                                    "label": "%",
                                    "value": "%"
                                },
                                {
                                    "label": "em",
                                    "value": "em"
                                }
                            ],
                            "display": "@[bgImgUrl]"
                        },
                        {
                            "type": "radio",
                            "layoutType": "block",
                            "text": "背景大小",
                            "bindKey": "bgSize",
                            "dictionary": [
                                {
                                    "label": "裁切显示",
                                    "value": "cover"
                                },
                                {
                                    "label": "完全显示",
                                    "value": "contain"
                                },
                                {
                                    "label": "自定义",
                                    "value": "custom"
                                }
                            ],
                            "display": "@[bgImgUrl]"
                        },
                        {
                            "type": "inputNumberUnit",
                            "layoutType": "inline",
                            "text": "宽度",
                            "bindKey": "bgSizeWidth",
                            "dictionary": [
                                {
                                    "label": "px",
                                    "value": "px"
                                },
                                {
                                    "label": "%",
                                    "value": "%"
                                },
                                {
                                    "label": "em",
                                    "value": "em"
                                }
                            ],
                            "display": "@[bgSize=='custom']"
                        },
                        {
                            "type": "inputNumberUnit",
                            "layoutType": "inline",
                            "text": "高度",
                            "bindKey": "bgSizeHeight",
                            "dictionary": [
                                {
                                    "label": "px",
                                    "value": "px"
                                },
                                {
                                    "label": "%",
                                    "value": "%"
                                },
                                {
                                    "label": "em",
                                    "value": "em"
                                }
                            ],
                            "display": "@[bgSize=='custom']"
                        },
                        {
                            "type": "radio",
                            "layoutType": "block",
                            "text": "平铺模式",
                            "bindKey": "bgRepeat",
                            "dictionary": [
                                {
                                    "label": "双向重复",
                                    "value": "repeat"
                                },
                                {
                                    "label": "水平重复",
                                    "value": "repeat-x"
                                },
                                {
                                    "label": "垂直重复",
                                    "value": "repeat-y"
                                },
                                {
                                    "label": "不重复",
                                    "value": "no-repeat"
                                },
                                {
                                    "label": "继承",
                                    "value": "inherit"
                                }
                            ],
                            "display": "@[bgImgUrl]"
                        },
                        {
                            "type": "radio",
                            "layoutType": "inline",
                            "text": "背景模式",
                            "bindKey": "bgAttachment",
                            "dictionary": [
                                {
                                    "label": "固定",
                                    "value": "fixed"
                                },
                                {
                                    "label": "滚动",
                                    "value": "scroll"
                                },
                                {
                                    "label": "继承",
                                    "value": "inherit"
                                }
                            ],
                            "display": "@[bgImgUrl]"
                        }
                    ]
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                }
            ]
        },
        {
            "type": "group",
            "text": "列表上方样式",
            "desc": "点击？查看样式设置用法指南",
            "display": "@[isShowUpTitle]",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "标题边距",
                    "bindKey": "upTitleBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "10px",
                        "paddingRightVal": "",
                        "paddingBottomVal": "10px",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内容边距",
                    "bindKey": "upContentBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "20px",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题文字",
                    "bindKey": "upTitleFont",
                    "default": {
                        "fontColors": {},
                        "fontTextAlign": "center",
                        "fontSize": 16,
                        "fontWeight": "600 Semi Bold",
                        "fontSizeUnit": "px"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "内容文字",
                    "bindKey": "upContentFont",
                    "default": {
                        "fontColors": {
                            "hex": "#999999",
                            "hex8": "#999999FF"
                        }
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "列表单项样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "容器边距",
                    "bindKey": "itemBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "itemBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "itemBorder"
                },

                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "图标样式",
                    "display": "@[styleType === 'iconAndTextAndTime' || styleType === 'iconAndText']",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "图标边距",
                            "bindKey": "iconBox",
                            "default": {
                                "marginTopVal": "",
                                "marginRightVal": "",
                                "marginBottomVal": "",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "5px",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },

                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "desc": "设置图标颜色，会覆盖主题色",
                            "text": "图标颜色",
                            "bindKey": "titleIconFontColor"
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "图标大小",
                            "bindKey": "titleIconFontSize",
                            "default": 7
                        }
                    ]
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "标题样式",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "标题行数",
                            "bindKey": "titleClamp",
                            "default": 1
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "titleBox",
                            "default": {
                                "marginTopVal": "",
                                "marginRightVal": "",
                                "marginBottomVal": "",
                                "marginLeftVal": "5px",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "标题字体",
                            "bindKey": "titleFont",
                            "default": {
                                "fontColors": {
                                    "hex": "#333333",
                                    "hex8": "#333333FF"
                                },
                                "fontSize": 16,
                                "fontSizeUnit": "px",
                                "fontWeight": "400",
                                "fontLineHeight": 2.5,
                                "fontLineHeightUnit": "-"
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "时间样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "timeBox"
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "标题字体",
                            "bindKey": "timeFont",
                            "default": {
                                "fontColors": {
                                    "hex": "#999999",
                                    "hex8": "#999999FF"
                                },
                                "fontSize": 15,
                                "fontSizeUnit": "px",
                                "fontWeight": "400",
                                "fontLineHeight": 0,
                                "fontLineHeightUnit": "-"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "接口地址",
                    "bindKey": "customInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "default": "/ctrl/website/api/columnlist"
                }
            ]
        }
    ]
}
